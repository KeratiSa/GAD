repeat task.wait() until game:IsLoaded()

task.spawn(function()
    task.wait(10) -- รอโหลดทุกอย่าง

    local player = game:GetService("Players").LocalPlayer
    local leaderstats = player:WaitForChild("leaderstats", 30)
    local sheckles = leaderstats and leaderstats:WaitForChild("Sheckles", 30)
    if not sheckles then
        warn("ไม่พบ Sheckles")
        return
    end

    local loadedStart, loaded10m, loaded100m = false, false, false

    while true do
        local money = sheckles.Value
        print("💰 Sheckles:", money)

        if money >= 100_000_000 and not loaded100m then
            loaded100m = true
            print("💸 โหลดสคริปต์ 100m")
            local ok, res = pcall(function()
                return game:HttpGet("https://raw.githubusercontent.com/KeratiSa/GAD/refs/heads/main/100m")
            end)
            if ok then
                loadstring(res)()
            else
                warn("โหลด 100m ล้มเหลว:", res)
            end

        elseif money >= 10_000_000 then
            print("💸 เตะเพื่อไปรัน 10M ภายนอก")
            player:Kick("เงินถึง 10 ล้าน — ออกจากเกมเพื่อไปรันตัว 10M")
            break

        elseif money >= 1_000_000 and not loaded10m then
            loaded10m = true
            print("💸 โหลดสคริปต์ 10m")
            local ok, res = pcall(function()
                return game:HttpGet("https://raw.githubusercontent.com/KeratiSa/GAD/refs/heads/main/10m")
            end)
            if ok then
                loadstring(res)()
            else
                warn("โหลด 10m ล้มเหลว:", res)
            end

        elseif money < 1_000_000 and not loadedStart then
            loadedStart = true
            print("💰 โหลดสคริปต์ Start")
            local ok, res = pcall(function()
                return game:HttpGet("https://raw.githubusercontent.com/KeratiSa/GAD/refs/heads/main/Start")
            end)
            if ok then
                loadstring(res)()
            else
                warn("โหลด Start ล้มเหลว:", res)
            end
        end

        task.wait(5)
    end
end)
